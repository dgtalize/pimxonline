{% extends 'PimxFrontendBundle::layout.html.twig' %}

{% block main_content %}
<h1 class="title">{{ 'note.title'|trans }}</h1>

<a class="button" href="{{ path('_note_new') }}">
    {{ 'text.add'|trans }}
</a>

    <table class="datagrid">
        <thead>
            <tr>
                <th>{{ 'text.name'|trans }}</th>
                <th>{{ 'text.isencrypted'|trans }}</th>
                <th>{{ 'text.updatedate'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <a href="{{ path('_note_edit', {'item_id': item.id}) }}">
                        {{ item.name }}
                    </a>
                </td>
                <td class="boolean">
                    {% if(item.isEncrypted) %}
                        <img src="{{ asset('images/tick.png') }}" />
                    {% endif %}
                </td>
                <td>{{ item.lastmodifdate|date('Y-m-d H:i') }}</td>
            </tr>
        {% endfor %}
            </tbody>
        </table>
{% endblock %}
