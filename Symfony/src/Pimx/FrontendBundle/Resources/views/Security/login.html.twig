<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <title>{% block title 'PIM Xtreme Online' %}</title>
            
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <meta name="mobile-web-app-capable" content="yes">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
			<meta name="theme-color" content="#820882">

            <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/template.css') }}" />
            
            <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
        {% endblock %}
        </head>
        <body>
        {% block body %}
            {% block main_content %}
                <div class="container">
                    <a class="pimx_logo center-block text-center" href="{{ path('_home') }}">
                        <img src="{{ asset('images/pimxlogo.png') }}" />
                    </a>
                    <form class="login center-block" action="{{ path('login_check') }}" 
                          method="post" role="form">
                        <input type="text" id="username" class="form-control"
                               name="_username" placeholder="Username"
                               value="{{ last_username }}" />
                        <input type="password" id="password"  class="form-control"
                               name="_password" placeholder="Password" />

                        {#
                        <div class="form-group">
                            <label for="db_name">DB Database:</label>
                            <input type="password" id="db_name" name="db_name" />
                        </div>
                        <div class="form-group">
                            <label for="db_user">DB User:</label>
                            <input type="password" id="db_user" name="db_user" />
                        </div>
                        <div class="form-group">
                            <label for="db_pass">DB Pass:</label>
                            <input type="password" id="db_pass" name="db_pass" />
                        </div>
                        #}

                        <button type="submit" 
                                class="btn btn-primary btn-block btn-lg">Login</button>

                        {% if error %}
                            <div class="error_message">{{ error.message }}</div>
                        {% endif %}
                    </form>
                </div>

            {% endblock %}

        {% endblock %}
                </body>
            </html>