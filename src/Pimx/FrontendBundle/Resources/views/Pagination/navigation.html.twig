{% set queryParams = app.request.query.all %}
<nav>
    <ul class="pagination">
        {% if(paginator.currentPage > 1) %}
            <li class="page-item">
                <a href="{{ path(app.request.attributes.get('_route'), queryParams|merge({'page': paginator.currentPage - 1}) ) }}"
                   class="page-link">
                    <i class="fa fa-angle-left"></i> {{ 'pagination.prev'|trans }}
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <a class="page-link" href="#">
                    <i class="fa fa-angle-left"></i> {{ 'pagination.prev'|trans }}
                </a>
            </li>
        {% endif %}
        <li class="page-item">
            <a href="{{ path(app.request.attributes.get('_route'), queryParams|merge({'page': paginator.currentPage + 1})) }}"
               class="page-link">
                {{ 'pagination.next'|trans }} <i class="fa fa-angle-right"></i>
            </a>

        </li>
    </ul>
</nav>
