<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <title>{% block title 'PIM Xtreme Online' %}</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="mobile-web-app-capable" content="yes">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <meta name="theme-color" content="#820882">

        <!-- favicon -->
        <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <link rel="mask-icon" href="{{ asset('safari-pinned-tab.svg') }}" color="#820882">
        <meta name="theme-color" content="#ffffff">


        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        {#
        <link rel="stylesheet" href="{{ asset('css/frontend.css') }}" />
        #}

        {% stylesheets
        'bower_components/tether/dist/css/tether.min.css'
        'bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css'
        'https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css'
        '../node_modules/select2-bootstrap-theme/dist/select2-bootstrap.min.css'
        'css/frontend.css'
        filter='cssrewrite' output='css/compiled/frontend.css' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}

        {% javascripts
        'bower_components/jquery/dist/jquery.min.js'
        'bower_components/tether/dist/js/tether.min.js'
        '../node_modules/bootstrap/dist/js/bootstrap.bundle.min.js'
        'bower_components/moment/min/moment.min.js'
        'bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js'
        'js/knockout-2.2.1.js'
        'js/globalize.min.js'
        'js/dx.chartjs.js'
        'js/forms.js'
        'js/main.js'
        output='js/compiled/frontend.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    {% endblock %}
</head>
<body>
{% block body %}
    {% if is_granted('ROLE_USER') %}
        {{ include( 'PimxFrontendBundle::_mainmenu.html.twig' ) }}
    {% else %}
        <header class="">
            <a class="pimx_logo" href="{{ path('_home') }}">
                <img src="{{ asset('images/pimxlogo.png') }}"/>
            </a>
        </header>
    {% endif %}

    <section id="main_content" class="container pt-2">

        {% block flash %}
            {{ include('PimxFrontendBundle::_flash_messages.html.twig') }}
        {% endblock %}

        {% block main_content %}
        {% endblock %}
    </section>

    {% block js_bottom %}
    {% endblock %}

{% endblock %}
</body>
</html>