{% extends 'PimxFrontendBundle::layout.html.twig' %}

{% block main_content %}
<h1 class="title">{% trans %}account.title{% endtrans %}</h1>

<a class="btn btn-primary" href="{{ path('_account_new') }}">
    <i class="fa fa-plus"></i> {{ 'text.add'|trans }}
</a>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <thead class="thead-default">
            <tr>
                <th>{{ 'text.code'|trans }}</th>
                <th>{{ 'text.description'|trans }}</th>
                <th>{{ 'account.currency'|trans }}</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <a href="{{ path('_account_edit', {'item_id': item.code}) }}">
                        {{ item.code }}
                    </a>
                </td>
                <td>{{ item.description }}</td>
                <td>{{ item.currency is null ? '' : item.currency.name }}</td>
                <td>
                    <a href="{{ path('_movement', {'movfilter[acc_cod]': item.code}) }}"
                       class="btn btn-sm btn-primary"
                       title="{{ 'account.seemovements'|trans }}">
                        <i class="fa fa-list"></i>
                    </a>                    
                </td>
            </tr>
        {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
