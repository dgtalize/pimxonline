{% extends 'PimxFrontendBundle::layout.html.twig' %}

{% block main_content %}
<h1 class="title">{{ 'currency.title'|trans }}</h1>


<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>{{ 'text.name'|trans }}</th>
                <th>{{ 'currency.isoCode'|trans }}</th>
                <th>{{ 'currency.symbol'|trans }}</th>
                <th>{{ 'text.isActive'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <a href="#">
                        {{ item.name }}
                    </a>
                </td>
                <td>{{ item.isoCode }}</td>
                <td>{{ item.symbol }}</td>
                <td class="boolean">
                    {% if(item.isActive) %}
                        <img src="{{ asset('images/tick.png') }}" />
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
